extends layout
            
block content
    div.h-screen.w-screen.bg-gradient-to-r.from-blue-400
        div.mt-36
            div.mt-8.flex.justify-center
                img(src='main_logo.png')
            form(action="/save_patient_in_firebase", method="POST")    
                div.mt-16.flex.justify-center
                    div.justify-start.w-48
                        p.text-white Name    
                div.flex.justify-center
                    div.justify-start                    
                        input(name='name', type='text', style={outline: 'none'}, required)#name.w-full.bg-green-200.px-2.border.border-green-500          
                div.mt-4.flex.justify-center
                    div.justify-start.w-48
                        p.text-white Email    
                div.flex.justify-center
                    div.justify-start                    
                        input(name='email', type='email', style={outline: 'none'}, required)#email.w-full.bg-green-200.px-2.border.border-green-500          
                div.mt-4.flex.justify-center
                    div.justify-start.w-48
                        p.text-white Password    
                div.flex.justify-center
                    div.justify-start                    
                        input(name='password', type='password', style={outline: 'none'}, required)#password.w-full.bg-green-200.px-2.border.border-green-500    
                div.mt-36.flex.justify-center                
                    div.bg-purple-700.px-20.py-2.text-green-500.rounded.font-bold
                        button(type="submit", id="registerbtn") Register