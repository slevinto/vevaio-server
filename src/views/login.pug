extends layout
            
block content
    div.h-screen.w-screen.bg-gradient-to-r.from-blue-400
        div.mt-36
            div.mt-8.flex.justify-center
                img(src='main_logo.png')
            form(action="/login_doctor", method="POST")        
                div.mt-16.flex.justify-center
                    div.justify-start
                        i.fa.fa-user.fa-solid.absolute.px-2.mt-1.text-green-500
                        input(name='email', type='email', style={outline: 'none'}, value=`${credentials.email}`, required)#email.w-full.bg-green-200.pl-8.border.border-green-500          
                div.mt-8.flex.justify-center
                    div.justify-start
                        i.fa.fa-unlock-keyhole.fa-solid.absolute.px-2.mt-1.text-green-500
                        input(name='password', type='password', style={outline: 'none'}, value=`${credentials.password}`, required)#password.w-full.bg-green-200.pl-8.border.border-green-500 
                div.mt-36.flex.justify-center                
                    div.bg-purple-700.px-20.py-2.text-green-500.rounded.font-bold
                        button(type="submit") Login
            div.mt-12.flex.justify-center                
                div.text-purple-700.font-bold
                    a(href='/register') Register me      